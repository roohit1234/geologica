              <%= f.label :image %>
              <%= f.file_field :image, class: 'form-control'%>
            </div>

            <div class="form-group">
              <%= f.label :description %>
              <%= f.text_area :description, class: 'form-control', placeholder: "Start writing here", cols: "30", rows: "10" %>
            </div>

            <div class="actions">
              <%= f.submit "Post", class: "btn btn-default" %>
            </div>
          <% end %>
          


  












