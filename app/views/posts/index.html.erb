
<p id="notice"><%= notice %></p>
<div class="container container1">
<div class="row">
  <div class="col-md-12"> 

  <div class="pull-right">
    <%= link_to 'New Post', new_post_path, class: 'btn' %>  
</div>
        <h1>Posts</h1>

        <table>
          <thead>
            <tr>
              <th>Title</th>
              <th>Image</th>
              
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @posts.each do |post| %>
              <tr>
                <td><%= post.title %></td>
                <td><%= image_tag post.image.url(:thumb) %></td>
                <td><%= link_to 'Show', post, class: 'btn' %></td>
                <td><%= link_to 'Edit', edit_post_path(post), class: 'btn' %></td>
                <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn'%></td>
              </tr>
            <% end %>
          </tbody>
        </table>

<br>


</div> 
        
    
</div>





